@model EmployeeViewModel

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Employee</h2>
    </div>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Employee Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control mb-3" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Mobile">Mobile</label>
                <input type="text" class="form-control mb-3" asp-for="Mobile" placeholder="Mobile">
                <span asp-validation-for="Mobile" class=" alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Address">Address</label>
                <input type="text" multiline="3" class="form-control mb-3" asp-for="Address"
                    placeholder="Enter Adderss">
                <span asp-validation-for="Address" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PinCode">Pincode</label>
                <input type="text" class="form-control mb-3" asp-for="PinCode" placeholder="PinCode">
                <span asp-validation-for="PinCode" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CityName">CityName</label>
                <input type="text" class="form-control mb-3" asp-for="CityName" placeholder="CityName">
                <span asp-validation-for="CityName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="DOB">DOB</label>
                <input type="datetime-local" class="form-control" asp-for="DOB">
                <span asp-validation-for="DOB" class=" alert-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="ImageFile" class="control-label"></label>
                @* <input type="file" accept="image/*" asp-for="ImageFile" class="form-control-file" /> *@
                <div class="custom-file">
                    <input type="file" asp-for="ImageFile" class="custom-file-input" id="customFile">
                   @* <label class="custom-file-label" for="customFile">Choose file</label> *@
                </div>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>

@*//for front end validations*@

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}